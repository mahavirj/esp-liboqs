# liboqs Configuration
CONFIG_LIBOQS_ENABLED=y
CONFIG_LIBOQS_ENABLE_SIG_ML_DSA=y
CONFIG_LIBOQS_ENABLE_SIG_FALCON=y
CONFIG_LIBOQS_ENABLE_SIG_SPHINCS=n
CONFIG_LIBOQS_AUTO_INIT_RNG=y
CONFIG_LIBOQS_USE_ESP_RANDOM=y

# Increase stack size for crypto operations
CONFIG_ESP_MAIN_TASK_STACK_SIZE=16384

# Compiler optimizations
CONFIG_COMPILER_OPTIMIZATION_PERF=y

# FreeRTOS Configuration
CONFIG_FREERTOS_HZ=1000

# Logging
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_MAXIMUM_LEVEL_DEBUG=y

# Flash and partition configuration
# Signature algorithms require more flash space
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_PARTITION_TABLE_SINGLE_APP_LARGE=y
